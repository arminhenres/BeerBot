<UserControl x:Class="GUI.BeerBotUsercontrol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" >
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="100"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="Red" Foreground="Black" FontWeight="ExtraBlack" HorizontalAlignment="Left" TextAlignment="Center" VerticalAlignment="Center">Hinweis: Das eingeschenkte Bier ist nur in Maßen zu genießen. Alkohol ist keine Lösung, aber eine Alternative.
            </TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Bier eingelegt?" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" Content="Done" Click="Button_Click" Name="Button1" VerticalAlignment="Center"/>
            <Button Grid.Row="3" Grid.Column="1" Content="Bier einschenken" HorizontalAlignment="Center" Visibility="Hidden" Name="Start" Click="Start_Click" VerticalAlignment="Center"/>
            <Button Grid.Row="3" Grid.Column="1" Content="Not Stopp" HorizontalAlignment="Center" Visibility="Hidden" Name="ButtonNot" Click="NotButton_Click" VerticalAlignment="Center"/> 
            <ProgressBar Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Visibility="Hidden" Name="ProgressBar"/>
        </Grid>
    </Grid>
</UserControl>
